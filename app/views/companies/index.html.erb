<div class="main-view-container">
  <div class="cards-container">

    <div>

    </div>

      <div class="search-bar">
      <%= form_tag companies_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a company"
        %>
        <%= button_tag "SEARCH", class:"get-started-button search-bar-btn"%>
      <% end %>
      </div>


      <div class="company-cards">
        <% @companies.each do |company| %>
          <div class="card-company">
            <img src="https://cdn3.volusion.com/pfevm.nseys/v/vspfiles/photos/custom-painted-casket-2.gif">
            <div class="card-company-infos">
              <div>
                <h2><%= link_to company.name, company_path(company)%></h2>
                <p><%= company.address %></p>
                <p><strong><%= company.category %></strong>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

  </div>

  <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  </div>

